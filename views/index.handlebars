<div class="container">

    <h1>Eat Da Burger</h1>

    <div class="row burgers">
        <div class="col-6 bg-light">
            <h2>Burgers to be eaten!</h2>
            <ul>
                {{#each burgers}}
                {{#unless eaten}}
                {{> burger-block devour=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        {{!-- <div class="col-4"></div> --}}
        <div class="col-6 bg-light">
            <h2>Eaten!</h2>
            <ul>
                {{#each burgers}}
                {{#if eaten}}
                {{> burger-block devour=true}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <br>
    <div class="row addburger">
        <div class="col-lg-12">
            <h2>Add a Burger</h2>
        </div>

        <div class="col-lg-12">
            <form class="create-form">

                <div class="form-group" style="text-align:center;">
                    <label for="burger">Burger Name:</label>
                    <input type="text" id="burger" name="name">
                    <button class="btn btn-primary" type="submit">Add Burger</button>
                </div>

            </form>
        </div>


    </div>